<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UseCompoundDrawables">
        <LinearLayout
            android:background="@drawable/gradient_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:text="Info Mahasiswa"
                />
            <ImageView
                android:id="@+id/dashInfoImage"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:src="@drawable/ic_mortarboard" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dashInfoName"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/primaryDarkColor"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Alex von hudson hsdah saduuh dsauhu ashduhu"
                    />
                <View
                    android:layout_margin="2dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.65dp"/>
                <TextView
                    android:id="@+id/dashInfoStudentId"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/primaryColor"
                    android:text="1101171082"
                    android:textIsSelectable="true"
                    />

                <GridLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="3"
                    >
                    <TextView
                        android:id="@+id/dashInfoBornOn"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="Batam"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/dashInfoBornDate"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="1999-07-30"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/dashInfoGender"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="Laki-laki"
                        android:textSize="18sp"
                        />
                </GridLayout>
                <TextView
                    android:id="@+id/dashInfoReligion"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Lainnya"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_dark"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="2dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Tambahan"
                    android:textSize="20sp"
                    android:textColor="@color/primaryColor"
                    />
                <TextView
                    android:id="@+id/dashInfoAddress"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryTextColor"
                    android:textIsSelectable="true"
                    android:text="TCP Blok E1 No. 8 Rt. 001 Rw. 005 Ds. Pelawad ,Kec.Ciruas ,Kabupaten Serang"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="2dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Kampus"
                    android:textSize="20sp"
                    android:textColor="@color/primaryColor"
                    />
                <TextView
                    android:id="@+id/dashInfoEduFaculty"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/primaryDarkColor"
                    android:text="Fakultas lmu Komputer"
                    />
                <TextView
                    android:id="@+id/dashInfoEduMajor"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/primaryColor"
                    android:text="Teknik Komputer"
                    />
                <GridLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="3"
                    >
                    <TextView
                        android:id="@+id/dashInfoEduLevel"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="S1"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/dashInfoEduClass"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="Non Reguler"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/dashInfoEduGroup"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_margin="5dp"
                        android:text="01"
                        android:textSize="14sp"
                        />
                </GridLayout>

                <TextView
                    android:id="@+id/dashInfoEduActive"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@android:color/holo_green_light"
                    android:text="AKTIF"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>