<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/gradeLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_centerInParent="true"
            app:indicatorColor="@color/primaryColor"
            app:indicatorName="BallGridPulseIndicator"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/gradeContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_bg"
            >
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nilai Hasil Semester"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_bg"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IPK"
                            android:textSize="20sp"
                            android:textColor="@color/primaryTextColor"
                            />
                        <View
                            android:layout_gravity="center"
                            android:background="@color/primaryTextColor"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/gradeIPK"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.99"
                            android:textSize="28sp"
                            android:textColor="@color/primaryTextColor"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="end"
                        android:id="@+id/gradeSKS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryTextColor"
                        android:text="Total SKS : 22"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:id="@+id/gradeMK"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryTextColor"
                        android:text="Total MK : 22"
                        android:textSize="16sp"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:layout_marginTop="4dp"
                        android:id="@+id/gradeShowPerformance"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryTextColor"
                        android:text="Lihat Grafik perkembangan"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/gradeExpandPerformance"
                app:el_expanded="false"
                app:el_parallax="1"
                app:el_duration="500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/gradePerformanceChart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    />
            </net.cachapa.expandablelayout.ExpandableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardElevation="5dp"
            app:contentPadding="10dp"
            app:cardBackgroundColor="@color/primaryLightColor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_info"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tap semester yang ingin anda lihat pada list dibawah ini"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/gradeSemesterList"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>