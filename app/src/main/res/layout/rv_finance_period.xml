<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/rvFinanceNumContainer"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:background="@drawable/circle_bg_num"
            >
            <TextView
                android:id="@+id/rvFinanceNum"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:text="1"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/rvFinancePeriod"
            android:layout_toEndOf="@+id/rvFinanceNumContainer"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_gravity="center"
            android:text="Periode 2018/2019 Genap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/rvFinanceStatus"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_gravity="center_vertical"
            android:text="Belum Lunas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/rvFinanceExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_parallax="1"
        app:el_expanded="false"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:contentPadding="5dp"
            app:cardBackgroundColor="@color/primaryColor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rvFinanceCharged"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.5.000.000"
                    android:textStyle="italic"
                    android:textColor="@color/primaryTextColor"
                    />

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primaryTextColor"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tagihan Ke - 1"
                        />
                    <TextView
                        android:id="@+id/rvFinanceFirst"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/ellipse_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1.200.000"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primaryTextColor"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tagihan Ke - 2"
                        />
                    <TextView
                        android:id="@+id/rvFinanceSecond"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/ellipse_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1.200.000"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primaryTextColor"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tagihan Ke - 3"
                        />
                    <TextView
                        android:id="@+id/rvFinanceThird"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/ellipse_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1.200.000"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        />

                </RelativeLayout>
                <View
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/primaryTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total tagihan"
                        />
                    <TextView
                        android:id="@+id/rvFinanceRemain"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/ellipse_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1.200.000"
                        android:textStyle="bold"
                        android:textColor="@color/yellow"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primaryTextColor"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yang sudah dibayar"
                        />
                    <TextView
                        android:id="@+id/rvFinancePaid"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/ellipse_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1.200.000"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        />

                </RelativeLayout>



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </net.cachapa.expandablelayout.ExpandableLayout>


</LinearLayout>