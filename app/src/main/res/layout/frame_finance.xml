<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/financeLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_centerInParent="true"
            app:indicatorColor="@color/primaryColor"
            app:indicatorName="BallGridPulseIndicator"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/financeContainer"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_margin="10dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Financial"
                android:textColor="@color/primaryDarkColor"
                />
            <com.google.android.material.card.MaterialCardView
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/gradient_bg_round"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp"
                        app:contentPadding="5dp"
                        app:cardBackgroundColor="@color/primaryLightColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/financePeriod"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisa Pembayaran Periode 2018/2019 Genap"
                            android:textColor="@color/primaryTextColor"
                            />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/financeDetail"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/primaryTextColor"
                        android:text="Rp. 500.000.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/primaryTextColor"
                        android:layout_gravity="center"
                        android:text="Sejauh ini sudah bayar"
                        />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/paidPercent"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primaryTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.00%"
                            />
                        <ProgressBar
                            android:id="@+id/paidProgress"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progress_state"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/financeList"
                tools:listitem="@layout/rv_finance_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>