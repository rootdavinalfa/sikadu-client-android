<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/dashboardLoading"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:indicatorName="PacmanIndicator"
        app:indicatorColor="@color/primaryDarkColor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/mainDashboardContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frameFragmentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/frame_infostudent"
            android:layout_above="@+id/dashBottomNavi"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameFragmentSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/frame_infostudent"
            android:layout_above="@+id/dashBottomNavi"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameFragmentGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/frame_gradestudent"
            android:layout_above="@+id/dashBottomNavi"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameFragmentFinance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/frame_finance"
            android:layout_above="@+id/dashBottomNavi"
            >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameFragmentEngineer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/frame_engineer"
            android:layout_above="@+id/dashBottomNavi"
            >
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/dashBottomNavi"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primaryColor"
            app:menu="@menu/bottomnav"
            />
    </RelativeLayout>

</RelativeLayout>